generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Book {
  id String @id @default(uuid())
  title String 
  stock Int
  createdAt DateTime @default(now())
  description String
  author String
  price Int
  genre String
  language String
  numPages Int
  pub_year Int
  publisher String
  image String
  comment_id Int?
  active Boolean @default(true)
  user_id Int?
  users User[] @relation("UserBooks")
}

model User{
  id String @id @default(uuid())
  role Role @default(USER)
  name          String?
  lastname      String?
  email         String?      @unique
  password      String       @default("PasswordPlaceHolder")
  createdAt     DateTime     @default(now())
  emailVerified DateTime?
  isBlocked     Boolean      @default(false)
  books Book[] @relation("UserBooks")
}
